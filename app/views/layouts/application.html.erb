<!DOCTYPE html>
<html>
<head>
  <title>Timeboard</title>
  <%= render 'layouts/stylesheets' %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>
</head>
<body>
  <div class="container">
    <div id="header" class="span-24 last">
      <%= render 'layouts/header' %>
    </div>
    <div id="toolmenu" class="span-4 round">
      <%= render 'layouts/toolmenu' %> 
    </div>
    <div id="mainview" class="span-20 round last">
      <div id="mainview-inner">
        <% flash.each do |key, value| %>
          <div class="flash <%= key %>"><%= value %></div>
        <% end %>
        <%= yield %>
      </div>
    </div>
  </div>
  <div id="footer" style="text-align: center">
    <p> Created by Bobby King, Andrew Monroe, Lily, and Troy Lewis in 2011 </p>
  </div>
  <%= debug(params) if Rails.env.development? %>
  <%= debug(session) if Rails.env.development? %>
</body>
</html>
