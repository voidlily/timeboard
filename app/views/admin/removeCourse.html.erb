<script text="text/javascript"> 
  $(document).ready(function(){$('#select-all').click(function(event) {
    if(this.checked) {
      $(':checkbox').each(function() {
        this.checked = true;
      });
    } else {
      $(':checkbox').each(function() {
        this.checked = false;
      });
    }
  });
  });
</script>
<% if(@course_list.empty?) %>
<h1>No Courses Exist</hi>
<% else %>
<h1>Users</h1>
<%= form_tag do %>
<div id="prof-timesheet-list">
  <table class="listview">
    <thead>
      <tr>
	<th>
	  ID
	</th>
        <th>
          Course Name
        </th>           
        <th>
         Professor
        </th>                    
	<th>
          Remove Course
        </th>
        <% end %>           
      </tr>
    </thead>
    <tbody>
      <% @course_list.each do |course| %>	
      <tr>
	<td>
	  <%= course.id %>
	</td>
        <td>
          <%= link_to course.name, course_path(course.id) %>
        </td>
        <td>
          <% @courseprof= User.find(course.professor_id)%>
          <%= @courseprof.name %>
        </td>
        <td>
          <li>
	    <%= button_to "Delete Course",{:controller => :admin, :action =>:delete_course, :id=> course.id}, :confirm => "Warning! Deleting this course will permanently remove it from the system. Proceed?" %>
	  </li>
        </td>
      </tr>
       <%end%>	
      <% end %>
    </tbody>
  </table>
</div>

